@model List<GratisPointPackages>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Buy Any Of The Gratis Packages</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Date Added
                    </th>
                    <th>
                        Gratis Points
                    </th>
                    <th>
                        Amount To Pay
                    </th>
                    <th></th>
                </tr>
            <thead>
            <tbody>
                        @foreach (var obj in Model.OrderBy(u => u.dateAdded))
                        {
                    <tr>
                        <td>@obj.dateAdded</td>
                        @* @{ *@
                        @*         DateTimeOffset productDate = obj.dateAdded; *@
                        @*         DateTimeOffset currentDate = DateTime.Now; *@
                        @*         TimeSpan timeSinceAdded = currentDate - productDate; *@
                        @*         int daysAgo = (int)timeSinceAdded.TotalDays; *@
                        @* } *@
                        @* <td>@daysAgo</td> *@
                        <td>@obj.gratisPointQuantity</td>
                        <td>@obj.AmountForGratisPoint</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="GratisPoint" asp-action="Summary" asp-route-id="@obj.gratisPointPackagesId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Buy
                                </a>
                            </div>
                        </td>
                    </tr>
                        }
            </tbody>
        </table>
    </div>
</div>