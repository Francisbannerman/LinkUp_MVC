@model List<GratisPointPackages>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Gratis Point Package List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="GratisPointPackages" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New GratisPoint
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Date Added
                    </th>
                    <th>
                        Gratis Point Quantity
                    </th>
                    <th>
                        Amount For Gratis Point
                    </th>
                    <th>
                        Added By
                    </th>
                    <th></th>
                </tr>
            <thead>
            <tbody>
                        @foreach (var obj in Model.OrderBy(u => u.dateAdded))
                        {
                    <tr>
                        <td>@obj.dateAdded</td>
                        <td>@obj.gratisPointQuantity</td>
                        <td>@obj.AmountForGratisPoint</td>
                        <td>@obj.addedByWho</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="GratisPointPackages" asp-action="Edit" asp-route-id="@obj.gratisPointPackagesId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="GratisPointPackages" asp-action="Delete" asp-route-id="@obj.gratisPointPackagesId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                        }
            </tbody>
        </table>
    </div>
</div>